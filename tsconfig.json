{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "orders/*": ["orders/*"],
      "db/*": ["db/*"]
    },
    "target": "ES2023",
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src",
    "__tests__"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}